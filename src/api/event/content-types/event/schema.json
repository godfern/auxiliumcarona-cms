{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Events"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "eventDate": {
      "type": "date"
    },
    "Title": {
      "type": "string"
    },
    "description": {
      "type": "richtext",
      "required": true,
      "minLength": 100,
      "maxLength": 1500
    },
    "subTitle": {
      "type": "string"
    },
    "images": {
      "type": "component",
      "component": "images.event-images",
      "repeatable": false
    },
    "slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "isUpcoming": {
      "type": "boolean",
      "default": true
    },
    "eventType": {
      "type": "enumeration",
      "enum": [
        "Event",
        "News"
      ]
    }
  }
}
